#!/usr/bin/env bash

set -ex

sleepTime="${ANSIBLE_PULL_SLEEP_TIME:-0}"

/usr/bin/ansible-pull \
  --directory "/var/lib/ansible/local" \
  --sleep "${sleepTime}" \
  --url https://github.com/skleinjung/ansible.git \
  --vault-password-file {{ ansible_secret_path }}/.vault-secret \
  --tags daily \
  configure-host.yml
